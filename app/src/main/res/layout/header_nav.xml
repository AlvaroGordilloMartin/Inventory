<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/header_width"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="@dimen/padding_header__left_nav"
    android:paddingTop="@dimen/padding_header_top_nav"
    android:layout_height="@dimen/header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"

    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/layout_with_profile_image"
        android:layout_height="@dimen/layout_with_profile_image"
        android:src="@drawable/profile"

        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>

    <!-- Nombre de Usuario -->
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:text="Titan Fiera Destructora de Mundos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" />

    <!-- Correo de la cuenta -->
    <TextView
        android:id="@+id/email"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"

        android:layout_height="wrap_content"
        android:text="ElGmaildeJesucristo@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>